# ============================================================================
# POLYMARKET TRADING SYSTEM - CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================================================
# CORE SETTINGS
# ============================================================================

# Paper Trading Mode (REQUIRED for testing - set to false for live trading)
PAPER_TRADING_MODE=true

# Database URL
# Local SQLite (default):
DATABASE_URL=sqlite:///polymarket_trading.db
# PostgreSQL (for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/polymarket

# ============================================================================
# WHALE FOLLOWING STRATEGY
# ============================================================================

# Enable/disable whale following strategy
WHALE_TRACKING_ENABLED=true

# Minimum quality score to copy (0.0 to 1.0)
WHALE_MIN_QUALITY_SCORE=0.70

# Delay before copying whale trades (seconds)
WHALE_COPY_DELAY_SECONDS=300

# Maximum position size for whale copies (% of bankroll)
WHALE_MAX_POSITION_PCT=8

# ============================================================================
# ENDGAME SWEEP STRATEGY
# ============================================================================

# Price range for endgame sweep
ENDGAME_MIN_PRICE=0.95
ENDGAME_MAX_PRICE=0.99

# Maximum time to settlement (hours)
ENDGAME_MAX_TIME_TO_SETTLEMENT_HOURS=24

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

MAX_POSITION_SIZE_PCT=10
MIN_PROFIT_THRESHOLD_PCT=0.3
DAILY_LOSS_LIMIT_PCT=5

# ============================================================================
# API KEYS (Optional)
# ============================================================================

OPENAI_API_KEY=
ANTHROPIC_API_KEY=
